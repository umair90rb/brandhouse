{
  "name": "sukoon",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "18.15.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --exec babel-node index.js",
    "client": "npm start --prefix client",
    "clean:client": "rm -rf client/build",
    "clean:server": "rm -rf build && mkdir build",
    "build:client": "npm install --prefix client && npm run build --prefix client",
    "build:server": "babel -d ./build ./src -s",
    "build": "npm run clean:server && npm run clean:client && npm run build:client && npm run build:server",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Umair",
  "license": "UNLICENSED",
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.22.15",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "sequelize": "^6.34.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
